<Window x:Class="JacobsCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized" WindowStyle="SingleBorderWindow" xmlns:my="clr-namespace:JacobsCalendar">
    <Grid Name="displayGrid" Width="Auto">
        <my:ScheduleGrid HorizontalAlignment="Left" Margin="0" x:Name="schedGrid" VerticalAlignment="Top" />
        <Menu Height="23" HorizontalAlignment="Left" Name="theMenu" VerticalAlignment="Top" Width="200">
            <MenuItem Header="New Event" Click="MenuItem_Click_1" />
            <MenuItem Header="New Group" Click="MenuItem_Click_2" />
        </Menu>
    </Grid>
</Window>
